<section class="social-network-media-player">
	<div class="container">
		<div class="social-media-player-wrapper">
			<div class="row no-gutters">
                {% for video in videos %}
                {% if video.main %}
				<div class="col-12 col-xl-9 line">
					<div class="social-media-content">
						<iframe width="100%" height="480" src="{{ video.youtube }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
					</div>
				</div>
                {% endif %}
                {% endfor %}
                
				<div class="col-12 col-xl-3 line">
					<div class="social-media-playlist">
						<div class="media-thumbnail">
                            {% for video in videos %}
                            {% if video.main == 0 %}
							<div class="row gutter-5 media-thumbnail-wrapper">
								<div class="col-7 col-sm-6">
									<div class="thumbnail-iframe">
										<iframe width="100%" height="auto" src="{{ video.youtube }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
									</div>
								</div>
								<div class="col-5 col-sm-6">
									<div class="media-caption">
										<h4><a href="{{ video.href }}">{{ video.title }}</a></h4>
										<p>{{ video.viewed }} lượt xem</p>
										<p>{{ video.date_added }}</p>
									</div>
								</div>
							</div>
                            {% endif %}
						  {% endfor %}
						</div>
					</div>
				</div>
                
			</div>
		</div>
	</div>
</section>