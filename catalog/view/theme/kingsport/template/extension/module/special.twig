<h2>Sản phẩm khuyến mãi</h2>
<div class="swiper-container" id="swiper-product-deal-nested-2v2">
	<div class="swiper-wrapper">
		
        {% for product in products %}
		<div class="swiper-slide">
			<figure class="figure">
				<div class="hot-item">
					<h5>Hot</h5>
				</div>
				<div class="figure-image"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
					<div class="add-cart">
						<ul>
							<li><a data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="mdi mdi-heart"></i></a>
								<div class="label">
									<p>Lưu sản phẩm</p>
								</div>
							</li>
							<li><a onclick="cart.add('{{ product.product_id }}');"><i class="mdi mdi-cart"></i></a>
								<div class="label">
									<p>Giỏ hàng</p>
								</div>
							</li>
							<li><a href="{{ product.href }}"><i class="mdi mdi-eye"></i></a>
								<div class="label">
									<p>Chi tiết</p>
								</div>
							</li>
						</ul>
					</div>
				</div>
				<div class="figure-caption">
                    {% if product.price %}
                        <div class="caption-price"> 
                            {% if not product.special %}
                            <h5>{{ product.price }}<span></span></h5>
                            {% else %}
                            <p>
    							<s>{{ product.price }}</s>(-19%)
    						</p>
    						<h5>{{ product.special }}<span></span></h5>
                            {% endif %}
                        </div>
                    {% endif %}
					<h5>{{ product.name }}</h5>
					<div class="gift"><img src="catalog/view/theme/kingsport/image/options-1/product-icon-1.png" alt="Sản phẩm tặng kèm" />
						<p>Tặng 30 kg tạ</p>
					</div>
					<div class="gift"><img src="catalog/view/theme/kingsport/image/options-1/product-icon-2.png" alt="Sản phẩm tặng kèm" />
						<p>Tặng máy đo huyết áp</p>
					</div>
				</div>
			</figure>
		</div>
		{% endfor %}
        
	</div>
</div>
<div class="swiper-pagination-wrapper">
	<div class="swiper-pagination swiper-pagination-product-discount"></div>
</div>
