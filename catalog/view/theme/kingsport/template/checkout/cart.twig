{{ header }}
<div class="article-title">
	<h2>{{ heading_title }}</h2>
</div>
<div class="breadcrumb-wrapper">
	<div class="container">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
			</ol>
		</nav>
	</div>
</div>
<section class="shopping-cart-check-out"> 
				<div class="container">
					<div class="previous-page">
                <a href="{{ continue }}">
                    <em class="mdi mdi-chevron-left"></em>
					         <p>Mua thêm sản phẩm khác</p>
                </a>
          </div>
                    
                    
                  
					<div class="cart-item-wrapper">
                    
                        {% if attention %}
                        <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ attention }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                        {% endif %}
                        {% if success %}
                        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                        {% endif %}
                        {% if error_warning %}
                        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                        {% endif %}
                        
                        
                        <div class="mid-content">
                             <div class="style_order">
                                <div class="style_step">
                                   <ul>
                                      <li class="active"><span class="number">1</span><span class="text">Giỏ hàng</span></li>
                                      <li><span class="number">2</span><span class="text">Thông tin và thanh toán</span></li>
                                      <li><span class="number">3</span><span class="text">Xác nhận hóa đơn</span></li>
                                      <li><span class="number">4</span><span class="text">Hoàn tất</span></li>
                                   </ul>

                                   <div class="clearfix"></div>

                                </div>
                                <div class="style_form">
                                   <form action="{{ action }}" method="post" enctype="multipart/form-data" class="cart-form">
                                      <table class="addtocart2">
                                         <thead>
                                            <tr>
                                               <td>Tên sản phẩm</td>
                                               <td>Giá</td>
                                               <td>Số lượng</td>
                                               <td>Tổng cộng</td>
                                               <td><img src="catalog/view/theme/kingsport/images/icon-clear.png" alt="" /></td>
                                            </tr>
                                         </thead>
                                         <tbody>
                                            {% for product in products %}
                                            <tr>
                                               <td>
                                                  <table class="img-title">
                                                     <tbody>
                                                        <tr>
                                                           <td>
                                                           {% if product.thumb %}
                                                            <a href="{{ product.href }}">
                                                            <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
                                                            {% endif %}
                                                           </a>
                                                           </td>
                                                           <td>
                                                              <div class="i-title">
                                                                <a href="{{ product.href }}">{{ product.name }}</a>
                                                              </div>
                                                           </td>
                                                        </tr>
                                                     </tbody>
                                                  </table>
                                               </td>
                                               <td class="price">{{ product.price }}</td>
                                               <td>
                                                  <div class="choose-quantity">
                                                     <div class="input-group spinner cart_spinner">

                                                        <button type="button" data-action='plus' data-cart-id="{{ product.cart_id }}" class="btn qty-number qty-plus btn btn-default btn-number"><i aria-hidden="true" class="mdi mdi-plus"></i></button> 
                                                        <input name="quantity[{{ product.cart_id }}]" type="text" readonly="readonly" value="{{ product.quantity }}" class="product-details-quantity-{{ product.cart_id }} form-control input-number" /> 
                                                        <button type="button" data-action='minus' data-cart-id="{{ product.cart_id }}" class="qty-number qty-minus btn btn-default btn-number"><i aria-hidden="true" class="mdi mdi-minus"></i></button>

                                                    </div>
                                                  </div>
                                               </td>
                                               <td class="price colorRed"><span>{{ product.total }}</span></td>
                                               <td>
                                               <a onclick="cart.remove('{{ product.cart_id }}');" class="btnclear">

                                                    <img src="catalog/view/theme/kingsport/stylesheet/images/checkout/icon-clear.png" alt="" />

                                               </a></td>
                                            </tr>
                                            {% endfor %}
                                         </tbody>
                                      </table>

                                      <div class="total-price">
                                        <div class="Total">

                                            <div id="info_coupon"></div>
                                            <div class="row-total text-right">
                                               <div class="t-tile"><span id="text_cart_total">Tổng giỏ hàng</span> : <strong>{{ totals_text }}</strong></div>

                                               <div class="clearfix"></div>
                                            </div>
                                         </div>
                                      </div>
                                    </form>  
                                      <div class="coupon_Total">
                                        
                                         {{ coupon }}
                                         
                                         {{ reward }}
                                         <div class="clearfix"></div>

                                      </div>
                                      <div class="policy-pay">
                                         <div class="policy">
                                            <ul>
                                               <li class="fa-check">GIAO HÀNG TOÀN QUỐC <span class="padding">|</span> <a href="/chinh-sach-van-chuyen-giao-nhan.html" class="colorRed">CHÍNH SÁCH GIAO HÀNG</a></li>
                                               <li class="fa-check">THANH TOÁN KHI NHẬN HÀNG</li>
                                               <li class="fa-check">TRẢ HÀNG TRONG 7&nbsp;NGÀY</li>
                                               <li class="fa-phone">HOTLINE: (08) 66 79 79 67</li>
                                            </ul>
                                         </div>
                                         <div class="pay">
                                            <div>Các hình thức thanh toán</div>
                                            <div><img src="catalog/view/theme/kingsport/stylesheet/images/checkout/img-pay.jpg" alt="" /></div>
                                         </div>
                                         <div class="clearfix"></div>
                                      </div>
                                      <div>
                                         <div class="button-form">
                                          <div class="row">
                                            <div class="col-4">
                                               <div class="fl"><button type="button" name="btnContinue" value="Mua thêm sản phẩm khác" onclick="location.href='{{ continue }}'" class="btn btn-default btn-ks btnContinue"><span>Mua thêm sản phẩm khác</span></button></div>
                                            </div>
                                            <div class="col-8 text-right">
                                              <button type="button" name="clear_order" onclick="location.href='#'" value="" class="btn btn-default btn-ks do_clear"><span>Hủy bỏ</span></button>
                                              <button type="button" name="btnCheckout" onclick="location.href='{{ checkout }}'" class="btn btn-primary btn-ks do_submit"><span>Tiến hành thanh toán</span></button>
                                            </div>
                                          </div>
                                           
                                            
                                            <div class="clearfix"></div>

                                         </div>
                                      </div>
                                   
                                </div>
                             </div>
                          </div>
                  
                        
						
					</div>
                    
				</div>
			</section>
            
            <script type="text/javascript"><!--
                $('.qty-number').on('click', function() {
                    var cart_id = $(this).data('cart-id');
                    var action = $(this).data('action');
                    var quatity_ele = $('.product-details-quantity-' + cart_id);
                    var quantity = parseInt(quatity_ele.val(), 10);
                    if(action === 'plus') {
                        quantity = quantity + 1;
                    }else {
                        if (quantity > 1) {
                            quantity = quantity - 1;
                        }
                    }
                	quatity_ele.val(quantity);
                    setTimeout(function () {
                        $('.cart-form').submit();
                    }, 200);
                });
                //--></script> 
{{ footer }} 